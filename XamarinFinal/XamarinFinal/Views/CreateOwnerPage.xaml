<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFinal.Views.CreateOwnerPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Entry Placeholder="First Name" Keyboard="Text" Text="{Binding FirstName}"/>
            <Entry Placeholder="Last Name" Keyboard="Text" Text="{Binding LastName}"/>
            <Entry Placeholder="Address" Keyboard="Text" Text="{Binding Address}"/>
            <Entry Placeholder="City" Keyboard="Text" Text="{Binding City}"/>
            <Entry Placeholder="Telephone" Keyboard="Text" Text="{Binding Telephone}"/>

            <Button VerticalOptions="Center"
                    Text="Create"
                    Style="{StaticResource RoundButton}"
                    Command="{Binding CreateOwnerCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>